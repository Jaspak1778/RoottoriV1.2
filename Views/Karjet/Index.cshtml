@model IEnumerable<RoottoriV1._2.Models.Karjet>

@{
    ViewBag.Title = "Index";
}

<div class="container">
    <div class="row">
        <div class="col-7">
            <h2>Kärjet</h2>
        </div>
        <div class="col-auto">
            <a class="btn button2" href="javascript:void(0);" onclick="history.go(-1);">Takaisin</a>
        </div>
        <div class="col">
            <a class="btn button3" data-toggle="tooltip" data-placement="bottom" title="Lisää Kärkitietue" href="/Karjet/Create"><img src="~/Icons/plus.svg" width="24" height="24" aria-label="Luo" />Kärki</a>
        </div>
    </div>

    <br />

    <table class="table table-striped ">
        <thead class="table-success">
            <tr>
                <th>@Html.DisplayNameFor(model => model.KarkiMalli)</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@Html.DisplayFor(modelItem => item.KarkiMalli)</td>
                    <td>
                        <div class="btn-group" role="group" aria-label="Basic example">
                            <a class="btn button2" data-placement="bottom" title="Lisätiedot" href="@item.ImageLink" target="_blank">Lisätiedot</a>
                            <a class="btn btn-secondary" data-toggle="tooltip" data-placement="bottom" title="Muokkaa" href="/Karjet/Edit?id=@item.KarkiID">Muokkaa</a>
                            @*<a class="btn btn-warning" data-toggle="tooltip" data-placement="bottom" title="Poista" href="/Karjet/Delete?id=@item.KarkiID">Poista</a>*@
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
