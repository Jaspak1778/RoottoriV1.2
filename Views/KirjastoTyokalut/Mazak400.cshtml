﻿@model IEnumerable<RoottoriV1._2.Models.KirjastoTyokalut>

@{
    ViewBag.Title = "Mazak400";
}
<div class="row">
    <div class="col-4">
        <a class="btn button2 btn-sm" data-toggle="tooltip" data-placement="bottom" title="Takaisin" href="javascript:void(0);" onclick="history.go(-1);">Takaisin</a>
    </div>
    <div class="col-auto">
        <h2>Mazak400</h2>
    </div>
</div>

<table class="table table-striped ">
    <thead class="table-success">
        <tr>

            <th>TKnro</th> 
            <th>@Html.DisplayNameFor(model => model.TyokalunNimi)</th>
            <th>@Html.DisplayNameFor(model => model.Pituus)</th>
            <th>@Html.DisplayNameFor(model => model.Halkaisija)</th>
            <th>@Html.DisplayNameFor(model => model.Pala)</th>
            <th>Kategoria</th>

            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr class="table">

                <td>@Html.DisplayFor(modelItem => item.TyokaluNro)</td>
                <td>@item.TyokalunNimi</td>
                <td>@Html.DisplayFor(modelItem => item.Pituus)</td>
                <td>@Html.DisplayFor(modelItem => item.Halkaisija)</td>
                <td>@Html.DisplayFor(modelItem => item.Pala)</td>
                <td>@Html.DisplayFor(modelItem => item.TyokaluKategoriaID)</td>
                <td>
                        @*button2 custom.css tyyli*@
                        <a class="btn button2" href="@item.ImageLink">Lisätiedot</a>
                </td>
            </tr>
        }
    </tbody>
</table>