@model RoottoriV1._2.Models.Magneetit

@{
    ViewBag.Title = "Suunnittelija";
}

<h2>Muokkaa</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">

        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.MagneettiID)

        <div class="form-group">
            @Html.LabelFor(model => model.Magneetti, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Magneetti, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Magneetti, "", new { @class = "text-danger" })
            </div>
        </div>

        <br />
        <div class="container">
            <div class="row">
                <div class="col-auto">
                    <a class="btn btn-info" data-toggle="tooltip" data-placement="bottom" title="Takaisin" href="javascript:void(0);" onclick="history.go(-1);">Takaisin</a>
                </div>
                <div class="col-auto">
                    <button class="btn button2" data-toggle="tooltip" data-placement="bottom" title="Talenna" type="submit">Talleta</button>
                </div>
            </div>
        </div>
    </div>
}