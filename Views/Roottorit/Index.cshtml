@section Scripts{
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    <script>

        var dropdownToggleList = [].slice.call(document.querySelectorAll('.dropdown-toggle'));
        dropdownToggleList.map(function (dropdownToggleEl) {
            return new bootstrap.Dropdown(dropdownToggleEl);
        });
    </script>

}



<head>
    <style>
        .grid-container {
            display: grid;
            grid-template-columns: auto auto;
            background-color: #2196F3;
            padding: 10px;
        }

        .grid-item {
            background-color: rgba(255, 255, 255, 0.8);
            border: 1px solid rgba(0, 0, 0, 0.8);
            padding: 15px;
            font-size: 20px;
            text-align: center;
        }


        .grid-item1 {
            background-color: rgba(255, 255, 255, 0.6);
            border: 1px solid rgba(0, 0, 0, 0.8);
            padding: 15px;
            font-size: 20px;
            text-align: center;
        }
    </style>
</head>
<body>
    <p>
        <div class="col-sm">
            <a class="btn btn-primary" href="~/Roottorit/Create">Create</a>
        </div>
    </p>

    @foreach (var item in Model)
    {

        <div class="grid-container">
            @*Ensimmäiset rivit                         *@
            <div class="grid-item1">Malli</div>
            <div class="grid-item1">@Html.DisplayFor(modelItem => item.Malli) </div>



            @*                         *@
            <div class="grid-item">Raaka Aine</div>
            <div class="grid-item">@item.RaakaAine</div>


            @*                         *@
            <div class="grid-item1">Pituus</div>
            <div class="grid-item1">@item.Pituus</div>


            @*                         *@
            <div class="grid-item">Halkaisija</div>
            <div class="grid-item">@item.Halkaisija"</div>


            @*                         *@
            <div class="grid-item1">Kiinnityspinta</div>
            <div class="grid-item1">@item.Kiinnityspinta</div>

            <div class="grid-item1">OhjNrot</div>
            <div class="grid-item1">@item.OhjNrot</div>

        </div>
    }

    <p>
        <div class="col-sm">
            <a class="btn btn-primary" href="~/Roottorit/Edit">Edit</a>
            <a class="btn btn-primary" href="~/Roottorit/Details">Details</a>
            <a class="btn btn-primary" href="~/Roottorit/Delete">Delete</a>
        </div>
    </p>

</body>







