@model IEnumerable<RoottoriV1._2.Models.Roottorit>

@{
    ViewBag.Title = "Suunnittelija";
}

<div class="container">
    <div class=" row">
        <div class="col-10">
            <h2>Planner</h2>
        </div>
        <div class="col">
            <a class="btn btn-dark" href="/KirjastoTyokalut/Index">Työkalu Kirjasto</a>
        </div>
    </div>
    <hr />
    <br />


</div>

<table class="table">
    <tr>
        <th>@Html.DisplayNameFor(model => model.Malli)</th>
        <th>@Html.DisplayNameFor(model => model.RaakaAine)</th>
        <th>@Html.DisplayNameFor(model => model.Pituus)</th>
        <th>@Html.DisplayNameFor(model => model.Halkaisija)</th>
        <th>@Html.DisplayNameFor(model => model.Kiinnityspinta)</th>
        <th>@Html.DisplayNameFor(model => model.OhjNrot)</th>
        <th>@Html.DisplayNameFor(model => model.Koneet.Kone)</th>
        <th>@Html.DisplayNameFor(model => model.Karjet.KarkiMalli)</th>
        <th>@Html.DisplayNameFor(model => model.Leuat.Leukapaine)</th>
        <th>@Html.DisplayNameFor(model => model.Magneetit.Magneetti)</th>
        <th>@Html.DisplayNameFor(model => model.Paletit.Paletti)</th>
        <th>@Html.DisplayNameFor(model => model.Piirustukset.Piirustusnro)</th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>@Html.DisplayFor(modelItem => item.Malli)</td>
            <td>@Html.DisplayFor(modelItem => item.RaakaAine)</td>
            <td>@Html.DisplayFor(modelItem => item.Pituus)</td>
            <td>@Html.DisplayFor(modelItem => item.Halkaisija)</td>
            <td>@Html.DisplayFor(modelItem => item.Kiinnityspinta)</td>
            <td>@Html.DisplayFor(modelItem => item.OhjNrot)</td>
            <td>@Html.DisplayFor(modelItem => item.Koneet.Kone)</td>
            <td>@Html.DisplayFor(modelItem => item.Karjet.KarkiMalli)</td>
            <td>@Html.DisplayFor(modelItem => item.Leuat.Leukapaine)</td>
            <td>@Html.DisplayFor(modelItem => item.Magneetit.Magneetti)</td>
            <td>@Html.DisplayFor(modelItem => item.Paletit.Paletti)</td>
            <td>@Html.DisplayFor(modelItem => item.Piirustukset.Piirustusnro)</td>


            <td>
                @*Muotoillaan sopiva string navigoinnin mahdollistamiseksi*@ 

                @{var polku = "Malli" + item.Malli + "Tyokalut";
                string formattedPolku = polku.Replace(" ", "");}
                
                <a class="btn btn-primary" data-toggle="tooltip" data-placement="bottom" title="Mallikohtaiset työkalut" href="/@formattedPolku/Index">Työkalut mallille</a>

                <a class="btn btn-success" data-toggle="tooltip" data-placement="bottom" title="Editoi" href="/Roottorit/Edit?id=@item.RoottoriID">Muokaa</a>

                <a class="btn btn-info" data-toggle="tooltip" data-placement="bottom" title="Lisätiedot" href="/Roottorit/Details?id=@item.RoottoriID">Lisätiedot</a>
            </td>
        </tr>
        }
</table>

