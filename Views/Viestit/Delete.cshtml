@model RoottoriV1._2.Models.Viestit

@{
    ViewBag.Title = "Poista";
}
<h3>Poista viesti</h3>

<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayName("Viesti")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Message)
        </dd>

        <dt>
            @Html.DisplayName("Lähettäjä")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Lahettaja)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Aika)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Aika)
        </dd>

    </dl>


    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="container">
            <div class="row">
                <div class="col-auto">
                    <a class="btn btn-dark" data-toggle="tooltip" data-placement="bottom" title="Takaisin" href="javascript:void(0);" onclick="history.go(-1);">Takaisin</a>
                </div>
                <div class="col-auto">
                    <input type="submit" value="Poista viesti" class="btn btn-outline-danger" />
                </div>
            </div>
        </div>

    }
</div>
