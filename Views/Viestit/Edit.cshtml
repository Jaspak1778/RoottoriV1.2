@model RoottoriV1._2.Models.Viestit

@{
    ViewBag.Title = "Muokkaa";
}

<h2>Muokkaa</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

<div class="form-horizontal">
    <h4>Viestit</h4>
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    @Html.HiddenFor(model => model.ViestiId)
    @Html.HiddenFor(model => model.Laite)


    <div class="form-group">
        @Html.Label("Viesti")
        <div class="col-md-10">
            @Html.EditorFor(model => model.Message, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Message, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.Label("Lähettäjä")
        <div class="col-md-10">
            @Html.EditorFor(model => model.Lahettaja, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Lahettaja, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.Aika, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.Aika, new { htmlAttributes = new { @class = "form-control", type = "date MM/dd/yyyy" } })
            @Html.ValidationMessageFor(model => model.Aika, "", new { @class = "text-danger" })
        </div>
    </div>

    <br />
    <div class="container">
        <div class="row">
            <div class="col-auto">
                <a class="btn button2" data-toggle="tooltip" data-placement="bottom" title="Takaisin" href="javascript:void(0);" onclick="history.go(-1);">Takaisin</a>
            </div>
            <div class="col-auto">
                <input type="submit" value="Talleta" class="btn button3" />
            </div>
        </div>
    </div>
</div>
}



